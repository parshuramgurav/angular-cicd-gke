pipeline {
    agent any
    environment {
        PROJECT_ID = 'searce-playground-v1'
                CLUSTER_NAME = 'testing'
                LOCATION = 'asia-south1-a'
                REGION = 'asia-south1'
                REPONAME = 'testing'
                CREDENTIALS_ID = 'kubernetes'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build image') {
            steps {
                sh '''
                    docker build -t $REGION-docker.pkg.dev/$PROJECT_ID/$REPONAME/metadata:$BUILD_ID .
                '''
            }
        }
        
        stage('Push auth and image') {
            steps {
                 sh 'gcloud auth configure-docker     asia-south1-docker.pkg.dev --quiet'
                 sh 'docker push ${REGION}-docker.pkg.dev/${PROJECT_ID}/${REPONAME}/metadata:${env.BUILD_ID}' 
                                 
            }
        }    
}
