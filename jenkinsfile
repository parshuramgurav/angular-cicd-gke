pipeline {
    agent any
    parameters {
        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
        // string(name: 'PARAM2', description: 'Param 2?')
    }
    environment {
        PROJECT_ID = 'flawless-helper-376817'
                CLUSTER_NAME = 'testing'
                LOCATION = 'asia-south1-a'
                REGION = 'asia-south1'
                REPONAME = 'testing'
                CREDENTIALS_ID = 'kubernetes'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Image Parameter') {
            steps {
                sh '''
                    echo Hello ${params.PERSON}
                '''
            }
        }


        stage('Build image') {
            steps {
                sh '''
                    echo "${params}"
                    docker build -t $REGION-docker.pkg.dev/$PROJECT_ID/$REPONAME/metadata:$BUILD_ID .
                '''
            }
        }
        
        stage('Push auth and image') {
            steps {
                 sh 'gcloud auth configure-docker     asia-south1-docker.pkg.dev --quiet'
                 sh 'docker push ${REGION}-docker.pkg.dev/${PROJECT_ID}/${REPONAME}/metadata:${BUILD_ID}' 
                                 
            }
        }
    }    
}
